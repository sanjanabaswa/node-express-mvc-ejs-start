  <div class="col col-xs-12">

    <div class="form-group">
      <label for="accountId">Account Id</label>
      <input type="number" class="form-control" id="accountId" name="accountId" value="<%= account.accountId %>" required>
    </div>

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%= account.name %>">
    </div>

    <div class="form-group">
      <label for="accountCreated">Account Created</label>
      <input type="date" class="form-control" id="accountCreated" name="accountCreated" value="<%= account.accountCreated %>">
    </div>

    <div class="form-group">
      <label for="accountType">Account Type</label>
      <input type="text" class="form-control" id="accountType" name="accountType" value="<%= account.accountType %>">
    </div>

  </div>
</div>

