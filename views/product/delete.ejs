<div class="container-fluid">
  <div class=row>
    <div class="col col-md-12">

      <h2>Confirm deletion of product</h2>
      <br>
      <br> ID: <%=  product._id %>
      <br> productKey: <%=product.productKey%>
      <br> description: <%=product.description%>
      <br> unitPrice: <%=product.unitPrice%>
