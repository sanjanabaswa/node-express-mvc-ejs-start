<!-- main  -->
<div class=row>
  <div class="col col-xs-12">

    <div class="form-group">
      <label for="name">email</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= order.email %>" required>
    </div>

    <div class="form-group">
      <label for="datePlaced">datePlaced</label>
      <input type="date" class="form-control" id="datePlaced" name="datePlaced" value="<%= order.datePlaced %>">
    </div>

    <div class="form-group">
      <label for="dateShipped">dateShipped</label>
      <input type="date" class="form-control" id="dateShipped" name="dateShipped" value="<%= order.dateShipped %>">
    </div>

    <div class="form-group">
      <label for="paymentType">paymentType</label>
      <input type="text" class="form-control" id="paymentType" name="paymentType" value="<%= order.paymentType %>">
    </div>

    <div class="form-group">
      <label for="amountDue">amountDue</label>
      <input onchange="onFormChange()" type="number" class="form-control" id="amountDue" name="amountDue"
        value="<%= order.amountDue %>" required>
    </div>

    <div class="form-group">
      <label for="paid">paid</label>
      <input type="text" class="form-control" id="paid" name="paid" value="<%= order.paid %>">
    </div>

  </div>
</div>

